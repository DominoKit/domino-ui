.theme-${color.name?lower_case} .bg-theme {
background-color: ${color.hex} !important;
color: #fff;
}

.bg-${color.name?lower_case} .content .text,
.bg-${color.name?lower_case} .content .number {
color: #fff !important;
}

.theme-${color.name?lower_case} .navbar {
background-color: ${color.hex};
}

.theme-${color.name?lower_case} .navbar-brand {
color: #fff;
}

.theme-${color.name?lower_case} .navbar-brand:hover {
color: #fff;
}

.theme-${color.name?lower_case} .navbar-brand:active {
color: #fff;
}

.theme-${color.name?lower_case} .navbar-brand:focus {
color: #fff;
}

.theme-${color.name?lower_case} .nav:not([class*="nav-tab"]) > li > a {
color: #fff;
}

.theme-${color.name?lower_case} .nav > li > a:hover {
background-color: transparent;
}

.theme-${color.name?lower_case} .nav > li > a:focus {
background-color: transparent;
}

.theme-${color.name?lower_case} .nav .open > a {
background-color: transparent;
}

.theme-${color.name?lower_case} .nav .open > a:hover {
background-color: transparent;
}

.theme-${color.name?lower_case} .nav .open > a:focus {
background-color: transparent;
}

.theme-${color.name?lower_case} .bars {
color: #fff;
}

.theme-${color.name?lower_case} .menu .list li.active {
background-color: transparent;
}

.theme-${color.name?lower_case} .menu .list li.active > :first-child i, .theme-${color.name?lower_case} .menu .list li.active > :first-child span {
color: ${color.hex};
}

.theme-${color.name?lower_case} .menu .list .toggled {
background-color: transparent;
}

.theme-${color.name?lower_case} .menu .list .ml-tree {
background-color: transparent;
}

.theme-${color.name?lower_case} .sidebar .legal {
background-color: #fff;
}

.theme-${color.name?lower_case} .sidebar .legal .copyright a {
color: ${color.hex} !important;
}

.theme-${color.name?lower_case} .waves-effect.waves-theme .waves-ripple {
background: rgba(${color.rgba_2});
}

